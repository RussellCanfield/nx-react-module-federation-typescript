{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es6",
    "module": "esnext",
    "lib": ["es5", "es6", "es2018", "dom"],
    "skipDefaultLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "noEmit": false,
    "incremental": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "composite": true,
    "declarationMap": true,
    "paths": {
      "ReactApp/*": ["./apps/react-app/src/app/components/*"]
    }
  },
  "references": [
    { "ReactApp": "./apps/react-app" }
  ],
  "exclude": ["node_modules", "tmp"]
}
